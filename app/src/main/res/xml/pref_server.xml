<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="address_settings"
        android:title="@string/pref_title_address"
        android:defaultValue="@string/pref_default_address"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="port_settings"
        android:inputType="number"
        android:title="@string/pref_title_port"
        android:defaultValue="@string/pref_default_port"/>

</PreferenceScreen>
